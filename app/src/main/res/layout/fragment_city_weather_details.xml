<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:background="@android:color/white"
    tools:context="com.weather.weather.fragments.CityWeatherDetailsFragment">


    <TextView
        android:id="@+id/detajl_current_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Currently: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/details_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_temp_changes_txt"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/much_rain"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/details_smthn_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_below="@+id/details_weather_txt"
        android:layout_toRightOf="@+id/details_smthn_icon"
        android:layout_toEndOf="@+id/details_smthn_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/detail_current_temp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detajl_current_txt"
        android:layout_centerHorizontal="true"
        android:text="23 \u2103"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/detail_temp_changes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_current_temp_txt"
        android:layout_centerHorizontal="true"
        android:text="\u2912 20\u2103 \u2913 28\u2103"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/details_smthn_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
        android:layout_alignBottom="@+id/details_smthn_btn"
        android:layout_alignLeft="@+id/details_weather_txt"
        android:layout_alignStart="@+id/details_weather_txt"
        android:layout_alignTop="@+id/details_smthn_btn" />

    <ImageButton
        android:id="@+id/close_details_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:src="@drawable/abc_ic_clear_mtrl_alpha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lots of rain"
        android:id="@+id/details_weather_txt"
        android:layout_below="@+id/details_weather_icon"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
