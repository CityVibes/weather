<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:background="@android:color/white"
    tools:context="com.weather.weather.fragments.CityBoardFragment">


    <TextView
        android:id="@+id/city_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/add_city_btn"
        android:layout_toStartOf="@+id/add_city_btn"
        android:gravity="center"
        android:text="Amsterdam"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/last_update_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_name_txt"
        android:layout_toLeftOf="@+id/add_city_btn"
        android:layout_toStartOf="@+id/add_city_btn"
        android:text="last update 10:30"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/add_city_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/city_name_txt"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/plus" />

    <ListView
        android:id="@+id/city_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/add_city_btn"
        android:layout_toRightOf="@+id/add_city_btn" />
</RelativeLayout>
