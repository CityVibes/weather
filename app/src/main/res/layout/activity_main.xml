<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="@color/customOpaqueGray">

    <FrameLayout
        android:id="@+id/city_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="cityPanel"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/customGray" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/temperature_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/customGray" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/daily_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/customGray" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/important_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/customGray" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/customGray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white" />

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="8dp" />
    </FrameLayout>

</RelativeLayout>
